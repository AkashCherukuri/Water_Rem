<Button>:
	font_size:"30sp"
	border: 0.5, 0.5, 0.5, 0.5
	background_color: 0.2, 0.2, 0.2, 1

<Label>:
	font_size: "30sp"

<TextInput>:
	background_color: 0.2, 0.2, 0.2, 1
	foreground_color: 1, 1, 1, 1 
	cursor_color: 1, 1, 1, 1
	font_size: "30sp"
	halign: "center"
	valign: "center"

Manager:
	MainScreen:
	SetScreen:


<MainScreen>
	name: "progress"
	goal : goal
	quantity : quantity
	progress : progress

	canvas:
		Color:
			rgba: 0.05, 0.05, 0.05 ,1 
		Rectangle: 
			pos: self.pos 
			size: self.size 
	GridLayout:
		size: root.width,root.height
		cols:1
		FloatLayout:
			Label:
				text: "Today's Progress:"
				pos_hint: {"x" : 0, "top" : 1}
			Button:
				text: ""
				background_normal:'exit.png'
				pos_hint: {"right" : 1, "top" : 1}
				size: root.width/20, root.width/20
				size_hint: None, None
				on_release: app.stop()
		Label:
			id: progress
			text: "0%"
			font_size: "70sp"
		ProgressBar: 
			id: goal	#########
			value: 0
			min: 0
			max: 7000

		Button:
			text: "History"

		GridLayout:
			cols: 4
			Label:
				text: "Quantity: " 
			Label:
				text: '0 ml'
				color: 0,1,0,1
				font_size: "20sp"
			Slider:
				id: quantity ###########################
        		orientation: "horizontal"
        		min: 0
        		max: 1000
        		value: 0
        		step: 50
        		on_value:label2.text = str(int(self.value)) 
        	Label:
        		text: '1000 ml'
        		color: 1,0,1,1
        		font_size: "20sp"

        GridLayout:
        	cols: 3
			Button:
				text:"Add!"
				size : 40,500
				on_press: root.pressed()
				#root refers to main widget
			Button:
				text:"Settings"
				size : 40,500
				on_release:
					app.root.current = "settings"
					root.manager.transition.direction = "up"
				
			Label:
				id: label2 
		        color: 0, 1, 1, 1

<SetScreen>
	name: "settings"
		
	GridLayout:
		
		cols: 1
		
		Label:
			text: "Settings"
			font_size: "40sp"
		
		GridLayout:
			cols: 2
			
			Label:
				text: "Song used as Alarm:"
			#Will Make this a drop down list of available songs later
			Label:
				text: "Never gonna give you up"
			
		Button:
			text: "Press to change alarm intervals"
			on_release: root.alarm_btn()
			
	
		Button:
			text: "Go back"
			on_release:
				app.root.current = "progress"
				root.manager.transition.direction = "down"

<Alarm_Popup>:
	alarm_in: alarm_in
	
	Label: 
        text: "Enter Alarm Interval:"
        size_hint: 0.6, 0.2
        pos_hint: {"x": 0, "top":0.95} 
  
  
	TextInput:
		id: alarm_in
		multiline: False
		size_hint: 0.35, 0.2
		pos_hint: {"right": 0.9, "top": 0.95}
		input_filter: "int"
		padding_y: 14
		
	Button:
		text: "Save"
		size_hint: 0.4, 0.2
		pos_hint: {"x": 0.3, "y": 0.1}
		on_release: root.save_alarm()
		
			
